<div class="clear"></div>
<fieldset id='payment' class='gestpay'>
  <% form_tag @form_url do -%>

  <h2 class="title"><%= t(:payment_text) %> <% if @server == "test" %><%= t(:payment_test) %><% end %></h2>
	<div id="gestpay_logos">
		<%= image_tag "sella_it.gif" %>
		<% if @server == "test" %>
			<%= image_tag "LOGOGESTPAYTEST.gif" %>
		<% else %>
			<%= image_tag "LOGOGESTPAY.gif" %>
		<% end %>
	</div>

  <fieldset id="order_details">
    <div class="clear"></div>
    <legend><%= t(:order_summary) %><%= @order.number %></legend>
    <%= render :partial => 'shared/order_details', :locals => {:order => @order} -%>
  </fieldset>
 
	<%= hidden_field_tag 'a', @a %>
	<%= hidden_field_tag 'b', @b %>

	<%= submit_tag t(:confirm_payment) %>
	<p id="gestpay_description_text"><%= t(:confirm_msg) %></p> 
  <% end %>
</fieldset>

<%= link_to t(:cancel_and_back), checkout_state_url(:payment), :class => "gestpay link cancel" %>